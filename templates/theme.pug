style
  if theme.glass
    .
      .error {
        margin-bottom: -1rem;
      }
    if theme.background || theme.backgroundImage
      .
        .card.item-type {
          backdrop-filter: blur(1rem);
          background-color: #e9e9e99e;
        }
  if theme.background
    .
      header, body::before {
        background: #{theme.background};
      }
  if theme.backgroundImage
    .
      header, body {
        background-image: url('#{theme.backgroundImage}');
      }
    if !theme.glass
      .
        main {
          text-shadow: 0.0625rem 0.0625rem 0.125rem #fefefe, 0 0 0.5rem #e9e9e9, 0.0625rem 0 0.125rem #e9e9e9;
        }
        .sheet {
          text-shadow: none;
        }