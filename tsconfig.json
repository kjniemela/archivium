{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
  },
  "include": ["src"]
}
